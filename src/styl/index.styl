@require "imports/main"

.container
    flex-direction column

section.bar
    height 40px
    width 100%
    background #000
    color #fff
    position fixed
    bottom 0
    font-size 16px
    border-top 1px solid white

    #lastEdited
        position absolute
        right 0
        border-left 1px solid white    
        line-height 40px
        padding 0 10px
        cursor pointer

        &:hover::after
            content 'CLICK TO VIEW REVISION HISTORY'
            position absolute
            font-size 12px
            color #cccccc
            top -100%
            left -1px
            text-align center
            width 100%
            border-top 1px solid white
            border-left 1px solid white

section.main
    height 100%
    width 100%
    align-items flex-start
    margin-bottom 40px
    font-size 20px

    textarea, .markdown-body
        background inherit
        border none
        height 100%
        max-width 1000px
        width 95%
        padding 5vh
        color white
        line-height 1.2em
        outline none
        resize none
        overflow-y auto

        &::-webkit-scrollbar
            width 15px
            background #000

        &::-webkit-scrollbar-thumb
            background #000
            border 1px solid white
    
    textarea
        font-size 20px
        font-family monospace

.buttons
    flex-direction column
    margin 5vh 0 0 2vh

.button
    cursor pointer
    padding 10px
    
    img
        cursor pointer
        height 20px
        width auto

    &:hover
        outline 1px solid white


section.history
    height 80vh
    max-width 1200px
    width 95%
    z-index 2
    border 1px solid white
    position absolute
    background rgba(0,0,0,0.8)
    top 5vh
    color white
    flex-direction column
    justify-content flex-start

    .header
        width 100%
        display flex
        padding 20px
        cursor move
        cursor -webkit-grab

        h1
            font-size 2.5rem
            flex 1
            text-align center

        #close
            cursor pointer
            padding 10px 
        
            img
                cursor pointer
                height 20px
                width auto

            &:hover
                outline 1px solid white

    .list
        width 100%
        height 100%
        padding 30px
        overflow-y scroll

        &::-webkit-scrollbar
            width 15px
            background #000

        &::-webkit-scrollbar-thumb
            background #000
            border 1px solid white
            border-right none

    .item
        width 100%
        margin 40px 0 0 0

        textarea
            width 100%
            height 50vh
            background #1119
            border-radius 7px
            overflow-y scroll
            padding 20px
            resize none
            outline none 
            color white
            font-family monospace
            font-size 16px
            border none
            margin 0

            &::-webkit-scrollbar
                width 10px
                background #000

            &::-webkit-scrollbar-thumb
                background #000
                border 1px solid white

        .markdown-body
            padding 20px
            background #1119
            border-radius 7px
            max-height 50vh
            overflow-y scroll

            &::-webkit-scrollbar
                width 10px
                background #000

            &::-webkit-scrollbar-thumb
                background #000
                border 1px solid white

        p
            font-size 16px

            &.id
                color #bbb
                display inline
                font-size 20px
                font-weight bold

            &.date
                display inline
                padding-left 20px
                font-weight bold
                font-size 23px

        .label
            padding-bottom 20px
            justify-content space-between