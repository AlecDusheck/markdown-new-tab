@require "imports/main"

.container
    align-items flex-start

textarea, .markdown-body
    background inherit
    border none
    height 100vh
    max-width 1000px
    width 95%
    padding 5vh
    color white
    font-family "Input Mono"
    font-size 20px
    line-height 1.2em
    outline none
    resize none

.buttons

    cursor pointer
    flex-direction column
    margin 5vh 0 0 0

    .button
        display inline
        opacity 0.3
        transition 0.3s all
        padding 10px

        &:hover
            opacity 1

img
    cursor pointer
    height 20px
    width auto